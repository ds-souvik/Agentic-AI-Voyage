{
  "manifest_version": 3,
  "name": "Distraction Killer - Deep Focus Assistant",
  "version": "1.0.0",
  "description": "Block distracting websites during deep work sessions. Stay focused, achieve more.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "declarativeNetRequest",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Distraction Killer - Deep Focus Assistant",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "reports.html", "settings.html", "theme-manager.js", "gamification.js", "gamification-ui.js", "gamification-service.js", "porn_blocklist.json", "styles/*", "images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}