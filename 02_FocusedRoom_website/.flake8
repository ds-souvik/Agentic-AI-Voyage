[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific rules
extend-ignore = E203,E501,E402,F401

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    instance,
    migrations

# Maximum complexity
max-complexity = 10

# Count errors and warnings
count = True
statistics = True
show-source = True

# File patterns to check
filename = *.py

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:S101
