{
  "manifest_version": 3,
  "name": "Focused Room",
  "version": "1.2.1",
  "description": "Your Deepwork Application backed by Cognitive Behaviourial Science. Protect your Focus. Build Your Future.",
  "permissions": [
    "storage",
    "webNavigation",
    "notifications",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "Focused Room - Your Deepwork App",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/blocked.html",
        "src/ui/reports.html",
        "src/ui/settings.html",
        "src/core/*",
        "src/ui/*",
        "Block_list/*",
        "assets/*",
        "src/core/session-notification-manager.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
